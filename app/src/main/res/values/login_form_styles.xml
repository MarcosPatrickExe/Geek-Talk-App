<?xml version="1.0" encoding="utf-8"?>

<resources>
            <style name="loginFormStyle"><!--  DEFININDO NOME DA ESTILIZAÇÃO-->

                        <!--   "match_parent" INDICA Q O VALOR SERÁ HERDADO DO
                              CONTAINER-PAI DESSA VIEW, NO CASO, O "constraint layout"   -->
                        <item name="android:layout_width" >match_parent</item>
                        <item name="android:layout_height" >300dp</item>
                        <item name="android:layout_margin">20dp</item>

                        <!--   Importando os estilos do container do form de login do arquivo "drawable/form_container_style"   -->
                        <item name="android:background" >@drawable/form_container_style</item>
            </style>


           <style name="inputLoginStyle">
                        <item name="android:layout_width">match_parent</item>
                        <item name="android:layout_height">wrap_content</item>
                        <item name="android:padding">20dp </item>
                        <item name="android:layout_marginLeft">40dp </item>
                        <item name="android:layout_marginRight">40dp</item>
                        <item name="android:layout_marginTop">20dp</item>

                        <item name="android:background">@drawable/input_form_style</item>
           </style>

           <style name="buttonStyle">
                        <item name="android:layout_width">match_parent</item>
                        <item name="android:layout_height">wrap_content</item>
                        <item name="android:layout_marginLeft">40dp</item>
                        <item name="android:layout_marginRight">40dp</item>
                        <item name="android:layout_marginTop">30dp</item>
                        <item name="android:padding">20dp</item>
                        <item name="android:textColor">@color/white</item>
                        <item name="android:textSize">30sp</item>
                        <item name="android:textStyle">bold</item>
                       <item name="android:textAllCaps">false</item>

                        <item name="android:background">@drawable/button_shape</item>
           </style>

</resources>